<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BDonorApp" parent="Theme.Material3.DayNight.NoActionBar">
            <item name="colorPrimary">@color/primary_red</item>
            <item name="colorOnPrimary">@color/white</item>

            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/secondary_gray</item>
            <item name="colorOnSecondary">@color/black</item>

            <!-- Status bar color. -->
            <item name="android:statusBarColor">@color/primary_red</item>


            <!-- Background and Text Colors -->
            <item name="android:windowBackground">@color/white</item>
            <item name="android:textColor">@color/text_primary</item>

    </style>

    <!-- This style defines the look of the background shape behind the selected icon. -->
    <style name="CustomActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/secondary</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Theme.BDonorApp" parent="Base.Theme.BDonorApp" />
</resources>