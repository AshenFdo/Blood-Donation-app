<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_card_blood_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blood_type_background"
            android:gravity="center"
            android:text="B+"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
         />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/text_view_card_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="John Doe"
                android:fontFamily="@font/lato_bold"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/text_view_card_user_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Colombo"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_urgentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urgent"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"
            android:textColor="@color/primary_red"
            android:gravity="right"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>