<?xml version="1.0" encoding="utf-8"?>
<!-- This shape is for the background of the EditText fields. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A light background color for the input fields. -->
    <solid android:color="@color/white" />

    <!-- Stroke for the border of the EditText. -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Fully rounded corners for a pill-like shape. -->
    <corners android:radius="25dp" />
</shape>
